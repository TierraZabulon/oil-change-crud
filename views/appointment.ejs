<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>Appointments</h1>
    <ul>
      <% appointments.forEach( el => { %>
      <li class="todoItem" data-id="<%=el._id%>">
        <span class=""
          ><%= el.carMake %> <%= el.appointmentDate %> <%= el.carYear %></span
        >
        <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
        <span class="del"> Delete </span> <a href="/appointment">appointment</a>
      </li>
      <% }) %>
    </ul>

    <form action="/appointment/createAppointment" method="POST">
      <input type="date" placeholder="" name="appointmentDate" />
      <input type="text" placeholder="Enter Car Make" name="carMake" />
      <input type="number" placeholder="Enter Car Year" name="carYear" />
      <input type="submit" />
    </form>
    <a href="/car">Back</a>
    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
  </body>
</html>
